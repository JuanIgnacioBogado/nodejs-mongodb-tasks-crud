{{#if tasks}}
  <table class="table table-bordered table-hover table-dark">
    <thead>
      <tr>
        <th>N</th>
        <th>Title</th>
        <th>Description</th>
        <th>Operations</th>
      </tr>
    </thead>

    <tbody>
      {{#each tasks}}
        <tr>
          <td>{{@index}}</td>
          <td>{{title}}</td>
          <td>{{description}}</td>

          <td>
            {{#if done}}
              <a class="btn btn-info" href="/task/{{_id}}/toggleDone">Undone</a>
            {{else}}
              <a class="btn btn-success" href="/task/{{_id}}/toggleDone">Done</a>
            {{/if}}

            <a href="/task/{{_id}}/delete" class="btn btn-danger">Delete</a>
            <a href="/task/{{_id}}/edit" class="btn btn-warning">Update</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}

  <div class="h-100 d-flex align-items-center justify-content-center">
    <div class="text-center text-white">
      <h1>No Tasks</h1>
      <img src="/icons/empty.svg" alt="icon" class="w-75">
    </div>
  </div>

{{/if}}